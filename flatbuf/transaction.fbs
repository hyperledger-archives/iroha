include "key.fbs";
include "commands.fbs";
include "primitives.fbs";

namespace iroha;

table Transaction {
  creatorPubKey:   PublicKey (required);
  command:         Command;
  signatures:      [Signature];
  hash:            [ubyte];
  attachment:      Attachment;
}

table Attachment {
  mime: string;
  data: [ubyte];
}

root_type Transaction;